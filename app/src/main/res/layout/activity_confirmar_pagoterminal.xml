<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aapt="http://schemas.android.com/aapt"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/clCoordinator"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#f3f4f6"
android:orientation="vertical"
tools:context=".ConfirmarPagoterminalActivity">



<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="match_parent"
    android:layout_height="323dp"
    android:layout_marginTop="-35dp"

    android:scaleType="centerCrop"

    app:srcCompat="@drawable/fondo_register_v2" />

<ImageView
    android:id="@+id/BtnRegresar"
    android:layout_width="50dp"
    android:layout_marginTop="20dp"
    android:layout_height="56dp"
    android:layout_alignParentLeft="true"
    android:padding="8dp"
    android:src="@drawable/ic_menu"
    app:tint="@color/white" />


<TextView
    android:layout_width="225dp"
    android:layout_height="55dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:fontFamily="@font/poppins_default_bold"
    android:scaleType="centerCrop"
    android:text="     App Pago Fácil"
    android:textColor="@color/white"
    android:textSize="23dp" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    android:padding="8dp"

    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">




        <ImageView

            android:layout_width="77dp"
            android:layout_height="74dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_perfil" />


        <TextView
            android:layout_width="195dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_default_bold"
            android:scaleType="centerCrop"
            android:text="  Keyla Pasco"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_default_bold"
            android:scaleType="centerCrop"
            android:text="24/12/2024"
            android:textColor="#CFBCEC"
            android:textSize="15dp" />



    </LinearLayout>





</LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="210dp"

    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:fontFamily="@font/poppins_default_bold"
        android:scaleType="centerCrop"
        android:text="Sigue los pasos del PinPad"
        android:textColor="#351c56"
        android:textSize="23dp" />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp" >


        <?xml version="1.0" encoding="utf-8"?>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".PaymentActivity">

            <!-- Título -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto a pagar"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_default_bold"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="32dp" />

            <!-- Monto a pagar -->
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 185.00"
                android:textSize="32sp"
                android:textColor="#351c56"
                android:fontFamily="@font/poppins_default_bold"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="16dp" />

            <!-- Imagen de la tarjeta -->


            <androidx.cardview.widget.CardView
                android:id="@+id/iv_card"
                android:layout_width="340dp"
                android:layout_height="283dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_amount"
                android:backgroundTint="#FFFFFF">

                <ImageView
                    android:id="@+id/imgPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Icono de método de pago"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pagar_pasar_tajeta"
                    android:adjustViewBounds="true"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>




            <!-- Texto: Puedes usar -->

            <!-- Método de pago -->

            <!-- Botón de continuar -->









        </androidx.constraintlayout.widget.ConstraintLayout>






    </LinearLayout>






</LinearLayout>





</RelativeLayout>
