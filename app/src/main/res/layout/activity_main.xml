<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:src="@drawable/fondo" />

        <!-- Contenido encima de la imagen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Sección 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_gravity="top"
                android:padding="20dp">

                <ImageView
                    android:layout_width="282dp"
                    android:layout_height="231dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/pagar" />

                <!-- Aquí agregamos el TextView con margen superior -->
                <!-- Margen superior de 20dp -->
            </LinearLayout>

        </LinearLayout>

        <!-- Sección 2 (Posicionada en la parte inferior y creciendo hacia arriba) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="508dp"
            android:layout_gravity="bottom"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="¡Hola!"   android:layout_marginTop="70dp"
                android:fontFamily="@font/poppins_default_bold"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buenas tardes :D"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins_default_bold"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahora pagar es más fácil"
                android:fontFamily="@font/poppins_default_bold"
                android:textColor="@android:color/white"
                android:textSize="28sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="300dp"
                android:layout_height="58dp"

                android:layout_marginTop="60dp"

                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_default_bold"
                android:textAllCaps="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="Toca para Empezar"

                android:textColor="#351c56"
                android:textSize="18sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>






        </LinearLayout>

    </FrameLayout>

</LinearLayout>
